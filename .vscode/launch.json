{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Client",
			"request": "launch",
			"type": "hl",
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "build client"
		},
		{
			"name": "Server",
			"program": "${workspaceFolder}/server/dist/app.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "pwa-node",
			"preLaunchTask": "build server"
		}
	],
	"compounds": [
		{
			"name": "Server and Client",
			"configurations": ["Server", "Client"]
		}
	]
}
